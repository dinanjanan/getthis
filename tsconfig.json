{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2015",
    "strict": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "sourceMap": true,
    "rootDirs": ["./src"],
    "outDir": "./dist",
    "forceConsistentCasingInFileNames": true,
    "watch": true,
    "downlevelIteration": true,
    "declaration": true
  },
  "watchOptions": {
    "excludeDirectories": ["./node_modules/**/*", "./dist/**/*"],
    "excludeFiles": ["**/*.d.ts"]
  }
}
